    <!-- === Скрипт для смены изображений === -->
    <script>
        // Функция, которая "нажимает" на скрытое поле для выбора файла
        function triggerFileInput(inputId) {
            document.getElementById(inputId).click();
        }

        // Функция, которая меняет изображение после выбора файла
        function changeImage(imgId, input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    // Находим элемент img по его id и меняем его атрибут src
                    document.getElementById(imgId).src = e.target.result;
                };

                // Читаем выбранный файл как URL
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

